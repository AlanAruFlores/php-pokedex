        <div class="poke__imagen">
            <img src="{{imagen}}" alt="pokemon">
        </div>
        <div class="poke__tipo">
            <h1 class="poke__nombre">{{nombre}}</h1>
            <div class="poke__iconos">
                <img src="{{tipo}}">
            </div>
        </div>
        <div class="poke__descripcion">
            {{descripcion}}
        </div>
    </main>
{{/pokemon}}

